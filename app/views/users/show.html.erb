<% provide(:title, @user.name) %> 
<div class="row">
	<aside class="col-md-6"> 
		<section class="user_info">
			<h1>
		        <%= gravatar_for @user %>
				<%= @user.name %> 
			</h1>
			<p><%="学号："+@user.school_number%></p>
			<%="学院："+@user.department%>
	    </section>
	</aside>

	<div class="col-md-6">
		<% if @user.microposts.any? %>
		<h3>课程 (<%= @user.microposts.count %>)</h3> 
		<ol class="microposts">
			<%= render @microposts %> 
		</ol>
		<%= will_paginate @microposts %> 
		<% end %>
	</div>
</div>