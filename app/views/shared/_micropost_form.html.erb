              <th><%=cou.teacher%></th>
              <th><%=cou.time%></th>
              <th><%=cou.place%></th>
              <th><%=cou.course_class%></th>
              <th><%=cou.required%></th>
              <th><%=cou.credit%></th>
              <th><%=cou.now_selected.to_s+"/"+cou.volume.to_s%></th>
