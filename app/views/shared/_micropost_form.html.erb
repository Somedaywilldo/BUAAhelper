<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

    
      <h3>可选课程</h3>
      <table class="table table-striped">
         <tr>
          <th>选择</th>
          <th>课程代码</th>
          <th>名称</th>
          <th>教师</th>
          <th>时间</th>
          <th>地点</th>
          <th>类别</th>
          <th>性质</th>
          <th>学分</th>
          <th>已选/容量</th>
          </tr>

        
        	<%Course.all.each do |cou|%>

            <tr>
              <th><%=check_box_tag 'courses[]',cou.name,false%></th>
              <th><%=cou.course_id%></th>
